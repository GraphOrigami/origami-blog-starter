(posts) => @map(posts, (post, key) => `
  <section>
    <a href="/posts/${ key }">
      <h2>${ post/title }</h2>
    </a>
    ${
      // Shift the date to U.S. Eastern Time; replace with your own time zone.
      new:@js/Date(`${post/date} 12:00:00 EDT`)/toLocaleDateString("en-US", {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })
    }
    ${ post/@text }
  </section>
`)
